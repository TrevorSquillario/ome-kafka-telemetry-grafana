# OME Kafka Telemetry Application Configuration
# Topics to subscribe: ome.telemetry, ome.alerts, ome.health, ome.inventory, ome.audit
KAFKA_TOPICS=ome.telemetry

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092 
KAFKA_GROUP_ID=ome-telemetry-consumer
KAFKA_AUTO_OFFSET_RESET=earliest

# TimescaleDB Configuration
TIMESCALEDB_HOST=timescaledb
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=ome_telemetry
TIMESCALEDB_USER=admin
TIMESCALEDB_PASSWORD=

# Postgres Configuration (for TimescaleDB)
POSTGRES_DB=ome_telemetry
POSTGRES_USER=admin
POSTGRES_PASSWORD=

# Application Configuration
LOG_LEVEL=DEBUG

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=
GF_INSTALL_PLUGINS=

# If you need Kafka reachable from the host/external network, set this to your host IP
# Default uses localhost â€” change if you need external access
KAFKA_ADVERTISED_HOST=192.168.1.100
